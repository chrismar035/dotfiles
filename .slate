# This is the default .slate file.
# If no ~/.slate file exists this is the file that will be used.

config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Resize Bindings
# bind right:alt       resize +10% +0
# bind left:alt        resize -10% +0
# bind up:alt          resize +0   -10%
# bind down:alt        resize +0   +10%
# bind right:ctrl;alt  resize -10% +0 bottom-right
# bind left:ctrl;alt   resize +10% +0 bottom-right
# bind up:ctrl;alt     resize +0   +10% bottom-right
# bind down:ctrl;alt   resize +0   -10% bottom-right
bind m:shift;cmd     move 0;0 screenSizeX;screenSizeY

# Push Bindings to the edge of the screen
# bind right:ctrl;cmd  push right bar-resize:screenSizeX/3
# bind left:ctrl;cmd   push left  bar-resize:screenSizeX/3
# bind up:ctrl;cmd     push up    bar-resize:screenSizeY/2
# bind down:ctrl;cmd   push down  bar-resize:screenSizeY/2

# Nudge Bindings
# bind right:shift;alt nudge +10% +0
# bind left:shift;alt  nudge -10% +0
# bind up:shift;alt    nudge +0   -10%
# bind down:shift;alt  nudge +0   +10%

# Throw Bindings
bind 1:ctrl;alt         throw 0 resize
bind 2:ctrl;alt         throw 1 resize
bind 3:ctrl;alt         throw 2 resize
# bind right:ctrl;alt;cmd throw right resize
# bind left:ctrl;alt;cmd  throw left  resize
# bind up:ctrl;alt;cmd    throw up    resize
# bind down:ctrl;alt;cmd  throw down  resize

# Focus Bindings
# bind right:cmd    focus right
# bind left:cmd     focus left
# bind up:cmd       focus up
# bind down:cmd     focus down
# bind up:cmd;alt   focus behind
# bind down:cmd;alt focus behind

# Relaunch
bind 1:cmd,shift relaunch

# Window Hints
bind esc:cmd hint

alias mainWidth 0.59
alias secondaryWidth 0.41

# 4k retina 4k retina and macbook laptop retina
layout workLayout 'iTerm2':TITLE_ORDER_REGEX='login,ttytter' move screenOriginX;screenOriginY screenSizeX;screenSizeY 1 | move screenOriginX;screenOriginY screenSizeX;screenSizeY 2
layout workLayout 'Hyper':TITLE_ORDER_REGEX='login,rainbowstream,ttytter' move screenOriginX;screenOriginY screenSizeX;screenSizeY 2 | move screenOriginX;screenOriginY screenSizeX;screenSizeY 1
layout workLayout 'Android Studio' move screenOriginX+screenSizeX/3;screenOriginY screenSizeX*0.63;screenSizeY 1
layout workLayout 'Pushbullet' corner top-left 2
layout workLayout 'Google Chrome':MAIN_FIRST push left bar-resize:screenSizeX*${mainWidth} 0 | move screenOriginX+screenSizeX/6.5;screenOriginY+screenSizeY/11 screenSizeX*0.70;screenSizeY*0.80 1 | move screenOriginX+screenSizeX/6.5;screenOriginY+screenSizeY/11 screenSizeX*0.70;screenSizeY*0.80 2
layout workLayout 'WMail' push left bar-resize:screenSizeX*${mainWidth} 0
layout workLayout 'Brave':MAIN_FIRST push left bar-resize:screenSizeX*${mainWidth} 0 | move screenOriginX+screenSizeX/6.5;screenOriginY+screenSizeY/11 screenSizeX*0.70;screenSizeY*0.80 1 | move screenOriginX+screenSizeX/6.5;screenOriginY+screenSizeY/11 screenSizeX*0.70;screenSizeY*0.80 2
# layout workLayout 'Slack' move screenOriginX+screenSizeX*${mainWidth};screenOriginY+screenSizeY*0.45 screenSizeX*${secondaryWidth};screenSizeY*0.50 0
layout workLayout 'Slack' corner bottom-right resize:screenSizeX*${secondaryWidth};screenSizeY*0.53 0
# layout workLayout 'Spotify' corner top-right resize:screenSizeX*${secondaryWidth};screenSizeY*0.45 0
# layout workLayout 'Remember The Milk' move screenOriginX+screenSizeX*${mainWidth};screenOriginY+screenSizeY*0.45 screenSizeX*${secondaryWidth};screenSizeY*0.55 0
# RTM over Spotify
layout workLayout 'Remember The Milk' corner top-right resize:screenSizeX*${secondaryWidth};screenSizeY*0.47-65 0
# layout workLayout 'Spotify' move screenOriginX+screenSizeX*0.60;screenOriginY screenSizeX*0.40;screenSizeY*0.45 0
layout workLayout 'Spotify' corner top-right resize:screenSizeX*${secondaryWidth};screenSizeY*0.47 0


bind 2:ctrl,shift layout workLayout
#default workLayout count:2 #resolutions:2560x1440;1920x1080
