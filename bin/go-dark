#/bin/sh

set -e

sed -i 's/colorscheme two-firewatch/colorscheme deep-space/' ~/.local/dotfiles/templates/neovim/init.vim
sed -i 's/set background=light/set background=dark/' ~/.local/dotfiles/templates/neovim/init.vim

sed -i 's/colors: \*light/colors: \*dark/' ~/.local/dotfiles/templates/alacritty.yml

export BAT_THEME="Dracula"

sed -i 's/delta --theme=OneHalfLight/delta --theme=Dracula/' ~/.local/dotfiles/templates/git/.gitconfig
