#/bin/sh

set -e

sed -i 's/colorscheme deep-space/colorscheme two-firewatch/' ~/.local/dotfiles/templates/neovim/init.vim
sed -i 's/set background=dark/set background=light/' ~/.local/dotfiles/templates/neovim/init.vim

sed -i 's/colors: \*dark/colors: \*light/' ~/.local/dotfiles/templates/alacritty.yml

export BAT_THEME="OneHalfLight"

sed -i 's/delta --theme=Dracula/delta --theme=OneHalfLight/' ~/.local/dotfiles/templates/git/.gitconfig
